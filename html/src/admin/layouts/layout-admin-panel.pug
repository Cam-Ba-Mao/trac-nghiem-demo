block vars
    -title = "Trang quản trị"

doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, maximum-scale=1.0, user-scalable=no")
        
        title=title
        // Favicon
        link(rel="icon" href="../images/favicon.png")
        // Bootstrap
        link(rel="stylesheet" href="../css/bootstrap.min.css")
        // Plugins style
        link(rel="stylesheet" href="../admin/css/bundle.min.css")
        // Template syle
        link(rel="stylesheet" href="../admin/css/admin.min.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css")

        
        // Jquery
        script(src="../js/jquery.min.js")

    body(class=(bodyClass && bodyClass))

        // START HEADER
        include ../components/Header/header
        // CLOSE HEADER

        // START SIDEBAR
        include ../components/SideBar/sidebar
        // CLOSE SIDEBAR
        
        // START CONTENT
        main.bm-admin-wrap
            block container
        // CLOSE CONTENT

        // START FOOTER
        include ../components/Footer/footer
        // CLOSE FOOTER


        // Bootstrap
        script(src="./js/popper.min.js")
        script(src="./js/bootstrap.min.js")
        // Plugins script
        //- script(src="../js/bundle.min.js")
        script(src="../admin/js/bundle.min.js")
        // TinyMCE
        script(src="./editors/tinymce/tinymce.min.js")
