                li
                    a(href="#")
                        i.fa-solid.fa-file-image
                        span.title
                            | Media
                            span.pending-count 45
                li
                    a(href="#")
                        i.fa-solid.fa-file
                        span.title Trang
                li
                    a(href="#")
                        i.fa-solid.fa-comment
                        span.title Bình luận
                li
                    a(href="#")
                        i.fa-solid.fa-plug
                        span.title Plugin
                    ul.sub-menu
                        li
