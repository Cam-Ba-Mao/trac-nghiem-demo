                        li
                            a(href="#") Sửa tệp tin Plugin
                li
                    a(href="#")
                        i.fa-solid.fa-wrench
                        span.title Công cụ
                li
                    a(href="./bm-settings.html")
                        i.fa-solid.fa-cog
                        span.title Cài đặt
                li.line
                    span
                a.bm-collapse-admin-menu(href="#")
                    i.fa-solid.fa-arrow-circle-left
                    span.title Thu gọn menu
