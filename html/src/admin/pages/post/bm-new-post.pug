extends ../../../admin/layouts/layout-admin-panel

append vars
    -bodyClass = "page-template-admin-panel-add-post"
    -typeMenu = ""

block container
    .bm-admin-title 
        h1 Thêm bài viết
    .bm-admin-content
        form(action="#", method="post", accept-charset="utf-8")
            div#poststuff
                div#post-body(class="metabox-holder columns-2")
                    div#post-left-content
                        div#post-title
                            input#title(type="text", name="title", value="", placeholder="Nhập tiêu đề ở đây", autofocus="1", required="1", autocomplete="off")
                        div#edit-slug-box(style="z-index:-1")
                            strong Liên kết tĩnh:
                            span#sample-permalink
                                a(href="#", target="_blank") https://trac-nghiem.io.vn
                                    span#editable-post-name
                                input(type="hidden", name="slug", value="", autocomplete="off", class="post-slug form-control")
                            span#edit-slug-buttons
                                button(type="button", class="edit-slug button") Chỉnh sửa
                        div#post-content(class="post-content")
                           
                            textarea#editor-description(name="description", data-editor="true", cols="40", rows="10", class="form-control d-none")

                            //- script.
                              
                                
                        div#post-seo(class="metabox")
                            div(class="handlediv", title="Click to toggle")
                            h3 Thông tin thẻ SEO
                            div(class="inside")
                                div(class="form-wrap")
                                    div(class="form-field")
                                        div(class="form-label")
                                            label(for="friendly_title") Tiêu đề trang
                                        div(class="form-input")
                                            input(type="text", name="friendly_title", value="", id="friendly_title", class="form-control")
                                            p(class="description") Thẻ tiêu đề trang hiệu quả phải dài từ 10-70 ký tự, bao gồm cả dấu cách.
                                    // End div.form-field
                                    div(class="form-field")
                                        div(class="form-label")
                                            label(for="metadesc") Meta description
                                        div(class="form-input")
                                            textarea#metadesc(name="metadesc", cols="40", rows="3", class="form-control", style="height: 72px; overflow: hidden;")
                                            p(class="description") Thẻ meta description hiệu quả phải dài từ 160-300 ký tự, ngắn gọn và chứa các từ khóa tốt nhất.
                                    // End div.form-field
                                    div(class="form-field")
                                        div(class="form-label")
                                            label(for="metakey") Meta keywords
                                        div(class="form-input")
                                            textarea#metakey(name="metakey", cols="40", rows="3", class="form-control", style="height: 72px; overflow: hidden;")
                                            p(class="description") Thẻ meta keywords hiệu quả phải chứa các từ hoặc cụm từ liên quan đến nội dung của bài viết.
                                    // End div.form-field
                                    //- script.
                                    //-     $("#snippet").each(function(){
                                    //-     var badJSON = this.value;
                                    //-     if(badJSON) {
                                    //-     var parseJSON = JSON.parse(badJSON);
                                    //-     var JSONInPrettyFormat = JSON.stringify(parseJSON, undefined, 4);
                                    //-     this.value = JSONInPrettyFormat;
                                    //-     }
                                    //-     });
                    // End #post-left-content
                    div#post-right-content
                      
                        div#post-category(class="metabox")
                            div(class="handlediv down", title="Click to toggle")
                            h3 Chuyên mục
                            div(class="inside")
                                div(class="div-select")
                                    input(type="hidden", name="cat_id", value="0")
                                    ul(class="ul-select")
                                        li
                                            label
                                                input(type="checkbox", name="post_category[]", value="10")
                                                | Khuyến mãi
                                        li
                                            label
                                                input(type="checkbox", name="post_category[]", value="1")
                                                | Tin tức
                                        li
                                            label
                                                input(type="checkbox", name="post_category[]", value="9")
                                                | Tuyển dụng
                        div#post-tag(class="metabox")
                            div(class="handlediv down", title="Click to toggle")
                            h3 Thẻ
                            div(class="inside")
                                div(class="div-select")
                                    ul(class="ul-select")
                                        li
                                            label
                                                input(type="checkbox", name="tag_ids[]", value="1")
                                                | Demo
                        div#post-thumbnail(class="metabox")
                            div(class="handlediv")
                            h3 Ảnh đại diện
                            div(class="inside")
                                div(class="upload-button-wrap")
                                    a(href="#", class="remove-thumbnail hide") Xóa ảnh đại diện
                                    a(href="#", class="set-thumbnail btn-upload") Đặt ảnh đại điện
                                    input#picture(type="hidden", name="picture", value="", onchange="changeUpload('#picture')")
                        div#post-published(class="metabox")
                            div(class="handlediv down")
                            h3 Đăng bài viết
                            div(class="inside")
                                div(class="published form-wrap")
                                    div(class="form-field")
                                        div(class="form-label")
                                            label(for="display") Trạng thái
                                        div(class="form-input")
                                            select#post-status(name="display", class="form-control")
                                                option(value="1", selected="selected", data-select2-id="2") Đã xuất bản
                                                option(value="0") Bản nháp
                                                
                                    div(id="post-date_post", class="form-field")
                                        div(class="form-label")
                                            i(class="fa fa-calendar")
                                            span Đăng 
                                                b ngay lập tức
                                            a(href="javascript:void(0)", class="show-datetime") Chỉnh sửa
                                        div(class="form-input")
                                            div(class="timestamp-wrap", style="display:none")
                                                div(class="input-group")
                                                    input(type="text", name="date_post", value="07:48, 02/11/2024", id="date_post", class="form-control datetime")
                                                    label(for="date_post", class="input-group-addon no-margin")
                                                        i(class="fa fa-calendar")
                                                p(style="margin-top:10px")
                                                    a(href="#edit_timestamp", class="save-timestamp hide-if-no-js button") Ok
                                                    a(href="#edit_timestamp", class="cancel-timestamp hide-if-no-js button-cancel") Hủy
                                    div(class="btn-publish")
                                        input(type="submit", name="form-submitted", value="Đăng bài viết", class="button btn-submit")
                    // End #post-right-content

