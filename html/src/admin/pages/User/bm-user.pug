                                ul
                                    li
                                        a(href="#", class="row-action row-action-profile") Chỉnh sửa
                                    li
                                        a(href="#", target="_blank", class="row-action row-action-view") Xem
                        td(class="manage-column column-name") Bá Mão
                        td(class="manage-column column-email")
                            a(href="mailto:cambamao98@gmail.com") cambamao98@gmail.com
                        td(class="manage-column column-role") administrator
                        td(class="manage-column column-action")
                            div(class="row_action")
                                a(href="#", title="Hồ sơ", data-bs-toggle="tooltip", class="btn-action action-edit bg-blue") Hồ sơ
