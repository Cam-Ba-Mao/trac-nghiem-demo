extends ../../../admin/layouts/layout-admin-panel

append vars
    -bodyClass = "page-template-admin-panel-user"
    -typeMenu = ""

block container
    
    .bm-admin-title 
        h1 Thành viên
        #toolbar.toolbar
            a.page-title-action.button.action-add(href="#") Thêm mới
    .bm-admin-content
        form(action="#", name="manage", class="admin-tablelist", method="post", accept-charset="utf-8")
            input(type="hidden", name="pagenow", value="users")
            input(type="hidden", name="typenow", value="user")
            input(type="hidden", name="_ws_http_referer", value="?mod=users")
            input(type="hidden", name="action", value="search")
            div#posts-filter(class="posts-filter")
                ul(class="subsubsub")
                    li
                        a(href="#", class="current") Tất cả 
                            span(class="count") (3)
                    li
                        a(href="#") Quản lý 
                            span(class="count") (3)
                div#search-box(class="search-box")
                    input(type="text", name="keyword", value="", class="form-control text-search")
                    input(type="submit", name="search", value="Tìm người dùng", class="button btn-search")
            div(class="tablenav top")
                div(class="btn-group")
                    div(class="actions bulkactions")
                        select#doaction(name="doaction", class="form-control")
                            option(value="", selected="selected") Hành động
                            option(value="suspend") Đình chỉ
                            option(value="actived") Kích hoạt
                            option(value="delete") Xóa người dùng
                        
                        input(type="submit", value="Áp dụng", class="button")
                    div(class="actions bulknewrole")
                        select(name="new_role", id="new_role", class="form-control", label="Đổi thành…")
                            option(value="0") Đổi thành…
                            option(value="administrator") Quản lý
                            option(value="editor") Biên tập viên
                            option(value="author") Tác giả
                            option(value="contributor") Cộng tác viên
                            option(value="subscriber") Thành viên đăng ký
                        
                        input(type="submit", value="Thay đổi", class="button")
                div(class="tablenav-pages")
                    span(class="displaying-num") 3 mục
            table#manage(class="table-list ws-list-table table-view-list users")
                thead
                    tr
                        th#checkbox(scope="col", class="manage-column column-checkbox")
                            input(type="checkbox", name="checkall", value="")
                        th#login(scope="col", class="manage-column column-login")
                            a(href="#", class="sorted desc") Tên người dùng
                        th#name(scope="col", class="manage-column column-name") Tên
                        th#email(scope="col", class="manage-column column-email")
                            a(href="#", class="sorted desc") Email
                        th#role(scope="col", class="manage-column column-role") Vai trò
                        th#action(scope="col", class="manage-column column-action") Tác vụ
                tbody#the-list(data-ws-lists="list:user")
                    tr(id="row_1", class="row_item")
                        td(class="manage-column column-checkbox")
                            input(type="checkbox", name="users[]", value="1", class="checkbox")
                        td(class="manage-column column-login")
                            a(href="#", class="title-link-edit") admin
                            div(class="row-actions")
                                ul
                                    li
                                        a(href="#", class="row-action row-action-suspend", style="color: #996800") Đình chỉ
                                    li
                                        a(href="#", class="row-action row-action-edit") Chỉnh sửa
                                    li
                                        a(href="#", target="_blank", class="row-action row-action-view") Xem
                                    li
                                        a(href="#", class="row-action row-action-delete") Xóa
                        td(class="manage-column column-name") Admin
                        td(class="manage-column column-email")
                            a(href="mailto:dienmaytonghop.com@gmail.com") dienmaytonghop.com@gmail.com
                        td(class="manage-column column-role") administrator
                        td(class="manage-column column-action")
                            div(class="row_action")
                                a(href="#", title="Chỉnh sửa", data-bs-toggle="tooltip", class="btn-action action-edit bg-blue") Chỉnh sửa
                                a(href="#", data-bs-toggle="tooltip", title="", style="background: gray", class="btn-action action-suspend fa-eye") Kích hoạt
                                a(href="#", title="", data-bs-toggle="tooltip", class="btn-action action-delete bg-red", onclick="return do_delete(1)") Xóa
                    tr(id="row_672", class="row_item")
